{
  "name": "builder-server",
  "version": "2.9.0",
  "description": "Builder server",
  "main": "server.js",
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "build": "tsc -p tsconfig.json",
    "watch:build": "tsc -p tsconfig.json --watch",
    "start": "npm run build && node ./dist/src/server.js",
    "migrate": "ts-node ./migrations/migrate.ts",
    "migrate:docker": "./migrations/node-pg-migrate --database-url-var CONNECTION_STRING --migration-file-language ts --migrations-dir /app/migrations --ignore-pattern '\\..*|.*migrate(.ts)?'",
    "seed": "cp -r ./scripts/seed/*_data ./dist/scripts/seed && node ./dist/scripts/seed/index.js",
    "migrate-assetpacks": "node ./dist/scripts/migrate-assetpacks.js"
  },
  "keywords": [
    "decentraland"
  ],
  "author": "Decentraland",
  "license": "Apache-2.0",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "dependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/escape-html": "0.0.20",
    "@types/express": "^4.16.1",
    "@types/mime-types": "^2.1.0",
    "@types/morgan": "^1.7.36",
    "@types/multer": "^1.3.7",
    "@types/multer-s3": "^2.7.6",
    "@types/pg": "^7.4.11",
    "ajv": "^6.10.2",
    "aws-sdk": "^2.401.0",
    "body-parser": "^1.18.3",
    "dcl-crypto": "^2.1.0",
    "dcl-ops-lib": "^1.0.6",
    "decentraland-commons": "^5.1.0",
    "decentraland-server": "^2.10.0",
    "escape-html": "^1.0.3",
    "express": "^4.16.4",
    "express-basic-auth": "^1.2.0",
    "express-jwt": "^5.3.1",
    "isomorphic-fetch": "^2.2.1",
    "jwks-rsa": "^1.6.0",
    "mime-types": "^2.1.24",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "multer-s3": "^2.9.0",
    "node-pg-migrate": "^3.21.1",
    "tslint": "^5.12.1",
    "typescript": "^3.8.3",
    "web3x": "^4.0.6"
  },
  "devDependencies": {
    "@types/node": "^11.9.0",
    "@types/uuid": "^3.4.6",
    "dcl-tslint-config-standard": "^1.1.0",
    "prettier": "^1.16.4",
    "ts-node": "^8.3.0",
    "tslint-plugin-prettier": "^2.0.1",
    "uuid": "^3.3.3"
  }
}
